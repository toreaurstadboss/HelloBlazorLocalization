@page "/counter"
@using System.Globalization
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResources> Localizer


<PageTitle>@Localizer["Counter"]</PageTitle>
<h1>@Localizer["Counter"]</h1>

<p role="status"> @Localizer["CurrentCount"]: @currentCount</p>
<button class="btn btn-primary" @onclick="IncrementCount">@Localizer["CurrentCount"]</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;


        var foo = Localizer["CurrentCount"];
    }
}
