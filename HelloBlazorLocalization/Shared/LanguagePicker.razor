@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using System.Globalization
@inject IOptions<RequestLocalizationOptions> LocalizationOptions

<div class="mt-3 mb-3 mx-5">
    @foreach (var culture in LocalizationOptions.Value.SupportedCultures)
    {
        <a onclick="location.href = '/?culture=@culture.ToString()';" class="text-decoration-none">
            <span class="badge rounded-pill mx-1 border border-primary 
            @((culture.ToString() == CultureInfo.CurrentCulture.ToString()) ?
                "bg-primary" : "bg-info text-dark")">@culture</span>
        </a>
    }
</div>